    rem set DIR_TEST_PY=!DIR_PYTHON!\TEST_PY
    
    rem set DIR_YOUTUBE_PY=!DIR_PYTHON!\YOUTUBE_PY
    
    rem set DIR_TESTS_PY=!DIR_PYTHON!\TESTS_PY
    
    rem set DIR_TOOLS_SRC_PY=!DIR_PYTHON!\TOOLS_SRC_PY
    
    rem set DIR_TOOLS_PY=!PROJECTS_LYR_DIR!\CHECK_LIST\DESKTOP\Python\TOOLS_PY
    rem set DIR_TOOLS_PY_=D:\TOOLS\TOOLS_PY

    exit /b 0
rem endfunction

